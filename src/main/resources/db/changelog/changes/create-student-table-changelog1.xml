<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">


<changeSet id="1" author="anjan">
    <createTable  tableName="swagger_student">
        <column name="student_id" type="bigint" autoIncrement="true">
            <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="first_name" type="varchar(225)" />

        <column name="last_name" type="varchar(223)" />

        <column name="email" type="varchar(224)">
          <constraints unique="true" nullable="false" />
        </column>
    </createTable>
</changeSet>


